    "setup:hooks": "ts-node scripts/installGitHooks.ts",
    "data:watch": "ts-node scripts/watchTracker.ts",
    "api": "ts-node server/index.ts",
    "tauri": "tauri",
    "desktop": "tauri dev"
  },
  "dependencies": {
    "@tauri-apps/plugin-dialog": "^2.4.2",
    "@tauri-apps/plugin-fs": "^2.4.4",
    "@tauri-apps/plugin-store": "^2.4.1",
    "@types/canvas-confetti": "^1.9.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "canvas-confetti": "^1.9.4",
    "chokidar": "^4.0.1",
    "cors": "^2.8.5",
    "cytoscape": "^3.33.1",
    "dotenv": "^16.4.7",
    "express": "^5.2.1",
    "react": "^19.2.0",
    "react-cytoscapejs": "^2.0.0",
    "react-dom": "^19.2.0",
    "xlsx": "^0.18.5"
